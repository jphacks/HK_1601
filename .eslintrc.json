{
    "extends": "standard",
    "installedESLint": true,
    "plugins": [
        "standard",
        "promise"
    ],
    "env": {
        "browser": true,
        "es6": true
    },
    "rules": {
        "no-multi-spaces": 0,
        "no-underscore-dangle": 0,
        "strict" : 0,
        "no-tabs" : 0,
        "indent" : 0,
        "no-multiple-empty-lines" : 0,
        "semi" : 0,
        "no-unused-vars" : 0,
        "arrow-parens": 0,
        "no-use-before-define": 0,
        "no-else-return": 0
    }
}